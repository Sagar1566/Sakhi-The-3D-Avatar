# Root Environment Variables for TalkMateAI Monorepo
# Copy this file to .env and fill in your actual values

# ==============================================
# SERVER CONFIGURATION (FastAPI Backend)
# ==============================================

# Google Gemini API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Server Host and Port
HOST=0.0.0.0
PORT=8000

# CORS Origins (comma-separated)
# For development: http://localhost:3000
# For production: https://your-domain.com
CORS_ORIGINS=http://localhost:3000

# Environment
# Options: development, production
ENVIRONMENT=development

# ==============================================
# CLIENT CONFIGURATION (Next.js Frontend)
# ==============================================

# WebSocket URL
# For development: ws://localhost:8000/ws/test-client
# For production: wss://your-api-domain.com/ws/test-client
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws/test-client

# API URL
# For development: http://localhost:8000
# For production: https://your-api-domain.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# Application Metadata
NEXT_PUBLIC_APP_NAME=Sakhi - The 3D Avatar
NEXT_PUBLIC_APP_VERSION=1.0.0

# ==============================================
# OPTIONAL CONFIGURATION
# ==============================================

# Node Environment
NODE_ENV=development

# Disable Next.js Telemetry (Optional)
NEXT_TELEMETRY_DISABLED=1
